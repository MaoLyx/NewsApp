<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/newImage_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_backgruond"
            fresco:roundedCornerRadius="5dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:background="@color/news_title_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/error_net"
                android:paddingLeft="5dp"
                android:id="@id/newsTitle_tv"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/error_net"
                    android:gravity="end|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="5dp"
                    android:id="@id/newsAuthor_tv"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/error_net"
                    android:gravity="end|center_vertical"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="5dp"
                    android:id="@id/newsDate_tv" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>